@ARTICLE{Retelj2022139,
author={Retelj, A.},
title={DEVELOPMENT OF DIGITAL COMPETENCE OF FUTURE TEACHERS OF GERMAN AS A FOREIGN LANGUAGE AT THE UNIVERSITY OF LJUBLJANA [ENTWICKLUNG DER DIGITALEN KOMPETENZ VON ANGEHENDEN DAF-LEHRKRÄFTEN AN DER UNIVERSITÄT LJUBLJANA]},
